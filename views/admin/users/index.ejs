<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>

<div class="container">
	<hr>
	<h2>Usuários</h2>
	<a href="/admin/users/new" class="btn btn-success">Novo Usuário</a>
	<hr>

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nome</th>
				<th>E-mail</th>
			</tr>
		</thead>
		<tbody>
			<% users.forEach(user => { %>
				<tr>
					<td><%= user.id %></td>
					<td><%= user.name %></td>
					<td><%= user.mail %></td>
					<td>
						<a href="/admin/users/edit/<%= user.id %>" class="btn btn-warning">Editar</a>

						<form method="POST" action="/users/delete" style="display: inline;" onsubmit="confirmationDelete(event, this)">
							<input type="hidden" name="id" value= "<%= user.id %>">
							<button class="btn btn-danger">Deletar</button>
						</form>
					</td>
				</tr>
			<% }) %>
		</tbody>
	</table>
</div>

<%- include ("../../partials/footer.ejs") %>
<%- include ("../../partials/deleteConfirm.ejs") %>

