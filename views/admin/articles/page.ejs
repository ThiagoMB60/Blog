<body>
	<div class="container">	

		<hr>
		
		<% result.articles.rows.forEach(article => { %>
			<div class="card">
				<div class="card-header">
					<h6><%= article.title %></h6>
				</div>
				<div class="card-body">
					<a class="btn btn-primary" href="/<%= article.slug %>">Acessar artigo</a>
				</div>
			</div>
			<br>
		<% }) %>

		<hr>

		<div class="row">
			<div class="col col-12">
				<% if(result.page > 2) { %>
					<a style="float:left;" href="/articles/page/<%= result.page - 1 %>"><<< Anterior</a>
				<% } else if(result.page == 2) { %>
					<a style="float:left;" href="/"><<< Anterior</a>
				<% } %>	

				<% if(result.next) { %>
					<a style="float:right;" href="/articles/page/<%= result.page + 1 %>">PrÃ³xima >>></a>
